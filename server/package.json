{
  "name": "digital-signage-panel",
  "version": "2.5.0",
  "private": true,
  "type": "module",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml,css,html}\"",
    "media:preprocess": "node scripts/media_preprocess_example.js",
    "build:exe": "pkg server.js --targets node18-win-x64 --output dist/servidor.exe"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "sharp": "^0.33.4",
    "fluent-ffmpeg": "^2.1.2"
  },
  "devDependencies": {
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "data/**/*",
      ".env"
    ]
  }
}